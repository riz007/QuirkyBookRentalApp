@model IEnumerable<QuirkyBookRentalApp.Models.Genre>
@using QuirkyBookRentalApp.Models
@{
    ViewBag.Title = "Index";
}

<h2>Genre</h2>


@Html.Partial("_CreateButtonPartial")
<br />
<br />

<table class="table table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(m=>m.Name)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach(var item in Model)
    {
        <tr class="table-header">
            <td>@Html.DisplayFor(m=>item.Name)</td>
            <td>
                @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { GenreId = item.Id })
            </td>
        </tr>
    }
</table>
