@model QuirkyBookRentalApp.Models.IndividualButtonPartial

@using QuirkyBookRentalApp.Models


<td style="width:400px;">
    <div class="btn-group" role="group">
        @Html.Partial("_IndividualButtonpartial",
                   new IndividualButtonPartial
                   {
                       Action = "Edit",
                       ButtonType = "btn-primary",
                       Glyph = "pencil",
                       Text = "Edit Button",
                       GenreId = Model.GenreId,
                       BookId = Model.BookId,
                       MembershipTypeId = Model.MembershipTypeId
                   })

        @Html.Partial("_IndividualButtonpartial",
           new IndividualButtonPartial
           {
               Action = "Details",
               ButtonType = "btn-success",
               Glyph = "list",
               Text = "Details Button",
               GenreId = Model.GenreId,
               BookId = Model.BookId,
               MembershipTypeId = Model.MembershipTypeId
           })

        @Html.Partial("_IndividualButtonpartial",
          new IndividualButtonPartial
          {
              Action = "Delete",
              ButtonType = "btn-danger",
              Glyph = "trash",
              Text = "Delete Button",
              GenreId = Model.GenreId,
              BookId = Model.BookId,
              MembershipTypeId = Model.MembershipTypeId
          })

    </div>
</td>


